<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.madi.sphero_21.ControlActivity"
    android:id="@+id/abc">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/green"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/blue"
        android:layout_alignTop="@+id/green"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/positionX"
        android:text="Position X :"
        android:textColor="#ff002fff"
        android:layout_below="@+id/positionY"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/positionY" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/positionY"
        android:text="Position Y:"
        android:textColor="#ff002fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/red" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Position"
        android:id="@+id/subButton"
        android:layout_toEndOf="@+id/green"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/resx"
        android:text="results in x"
        android:textColor="#ffff460c"
        android:layout_below="@+id/resy"
        android:layout_alignStart="@+id/resy" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/resy"
        android:text="results in y"
        android:textColor="#ffff460c"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/green" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/desiredY"
        android:layout_toStartOf="@+id/subButton"
        android:text="Desired Y"
        android:layout_centerVertical="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/desiredX"
        android:text="Desired X"
        android:layout_above="@+id/subButton"
        android:layout_alignStart="@+id/desiredY" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopButton"
        android:layout_below="@+id/subButton"
        android:layout_alignStart="@+id/blue" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/upButton"
        android:layout_below="@+id/stopButton"
        android:layout_alignStart="@+id/desiredY" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/downButton"
        android:layout_below="@+id/upButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/disButton"
        android:layout_alignTop="@+id/downButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
